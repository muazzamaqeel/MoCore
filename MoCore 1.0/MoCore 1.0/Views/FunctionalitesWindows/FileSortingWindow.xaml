<Window x:Class="MoCore_1_0.Views.FileSortingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Sorting" 
        Height="300" Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#2C2F33"
        ResizeMode="CanResizeWithGrip" 
        WindowStyle="SingleBorderWindow">

    <Grid Background="#2C2F33">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Start" FontSize="16" Padding="10" Margin="0,0,0,10" Background="#7289DA" Foreground="White" Width="150" Click="StartButton_Click"/>
            <ProgressBar Name="ProgressBar" Height="20" Width="300" Margin="0,20,0,0" Visibility="Collapsed"/>
            <TextBlock Name="StatusText" FontSize="14" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
