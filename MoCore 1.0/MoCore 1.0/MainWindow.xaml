<Window x:Class="MoCore_1_0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoCore Optimizer" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="System Performance Monitor" FontSize="20" Margin="10"/>
            <TextBlock Name="CpuUsageText" Text="CPU Usage: " FontSize="16" Margin="10"/>
            <TextBlock Name="MemoryUsageText" Text="Memory Usage: " FontSize="16" Margin="10"/>
            <Button Content="Start Monitoring" Click="StartMonitoring_Click" Margin="10" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
